# turn off the annoying "Wuff, Wuff"
vbell off

# don't show me the copyright screen
startup_message off

# rebind 'kill window' from CTRL-a k to CTRL-a K
bind k
bind K kill

# change the prefix to CTRL-s
escape ^Ss

hardstatus on
hardstatus alwayslastline


backtick 1 0 5 sh -c "if [ -d /google/src -a ! -d /google/src/cloud ]; then echo '[!]'; else echo ''; fi"

# colored window list with system stats
hardstatus string "%{Yk}[%l] |%{w}%=%-w%{Rk}%1`%{-}%{Wr}[%n %t]%{-} %+w%=%{Yk} | [%m/%d %c]"

# Scroll back to 30000 lines.
defscrollback 30000

# Autodetach session on hangup instead of terminating screen completely
autodetach on

# Activity flash bar
activity "activity in %n (%t) [%w:%s]~"

# Run everything in UTF-8.
defutf8 on
